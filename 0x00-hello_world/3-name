#!/bin/bash

# Check if the C file name is provided as an argument
if [ -z "$CFILE" ]; then
    echo "Error: No C file specified. Set the \$CFILE variable to the path of the C file."
    exit 1
fi

# Check if the provided C file exists
if [ ! -f "$CFILE" ]; then
    echo "Error: $CFILE not found."
    exit 1
fi

# Extract the base name of the C file (without extension)
BASENAME=$(basename "$CFILE" .c)

# Compile the C file and create an executable named cisfun
gcc "$CFILE" -o cisfun

echo "Executable cisfun created"